FROM node:20-alpine

WORKDIR /app

# Copier les fichiers de dépendances
COPY package*.json ./

# Installer toutes les dépendances (y compris devDependencies)
RUN npm install

# Copier le plugin SplitText premium
COPY gsap-plugins/SplitText.js node_modules/gsap/SplitText.js

# Copier le reste du code (sera monté en volume en dev, mais utile si tu build l'image)
COPY . .

# Port Next.js dev
EXPOSE 3000

# Lancer Next en mode dev avec hot reload
CMD ["npm", "run", "dev"]